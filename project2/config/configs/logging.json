{
    "*": {
        "logging": {
            "patio": {
                "level": "ERROR",
                "appenders": [
                    {
                        "type": "RollingFileAppender",
                        "file": "/var/log/kcdc/kcdc.log",
                        "pattern": "{hostname}::{gid}::{pid}::[{[yyyy-MM-ddTHH:mm:ss:SSS (z)]timeStamp}]::{name}::{levelName} - {message}"
                    }
                ]

